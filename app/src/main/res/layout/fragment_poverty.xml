<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beijing"
    >

    <include layout="@layout/title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:layout_weight="1.4"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/fupin_banner"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/btn_xinwen"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/fupin_xinwen"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="新闻"
            android:gravity="center"
            android:textSize="20dp"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/btn_fupinanli"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/fupin_jingzhun"
                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="扶贫案例"
                android:gravity="center"
                android:textSize="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/btn_cunqing"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/fupin_cunzhuang"
                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="村情村貌"
                android:gravity="center"
                android:textSize="20dp"
                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/btn_gongzuotai"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/fupin_gongzuotai"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="工作台"
            android:gravity="center"
            android:textSize="20dp"
            />

    </LinearLayout>



</LinearLayout>