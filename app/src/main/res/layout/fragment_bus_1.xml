<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beijing"
    >

    <include layout="@layout/title"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="3dp"
        android:id="@+id/img"
        android:layout_marginTop="2dp"
        android:src="@drawable/map14"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="南湖大厦 - 光谷金融街"
        android:gravity="left"
        android:textSize="20dp"
        android:layout_marginLeft="100dp"
        android:padding="10dp"
        android:id="@+id/txt_luxian"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="里程：20KM"
        android:gravity="left"
        android:textSize="20dp"
        android:layout_marginLeft="100dp"
        android:padding="10dp"
        android:id="@+id/txt_piaojia"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="票价：8元"
        android:gravity="left"
        android:layout_marginLeft="100dp"
        android:padding="10dp"
        android:textSize="20dp"
        android:id="@+id/txt_licheng"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:id="@+id/btn_xiayibu"
        android:background="@drawable/btn_bai_txt_lan_r500"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        />


</LinearLayout>