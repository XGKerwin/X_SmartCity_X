<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beijing"
    >

    <include layout="@layout/title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/btn_qiuzhu"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/fupin_qiuzhu"
                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="收到求助"
                android:gravity="center"
                android:textSize="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/btn_bangfu"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/fupin_bangfu"
                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="我帮扶的"
                android:gravity="center"
                android:textSize="20dp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/btn_zoufang"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/fupin_zoufang"
                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="入户走访"
                android:gravity="center"
                android:textSize="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/btn_anli"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/fupin_anli"
                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="案例发布"
                android:gravity="center"
                android:textSize="20dp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    </LinearLayout>

</LinearLayout>