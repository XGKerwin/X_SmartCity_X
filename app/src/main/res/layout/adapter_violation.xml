<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/beijing"
    android:layout_marginBottom="10dp"
    android:padding="4dp"
    android:id="@+id/lin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/bai_txt_bai_r100"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处罚地点：大连市万达广场"
            android:id="@+id/txt_diain"
            android:textSize="18dp"
            android:padding="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="车牌号：鲁123"
                android:id="@+id/txt_NO"
                android:textSize="18dp"
                android:padding="5dp"
                />

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="处理状态："
                android:id="@+id/txt_zhuangtai"
                android:textSize="18dp"
                android:padding="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="违章记分："
                android:id="@+id/txt_jifen"
                android:textSize="18dp"
                android:padding="5dp"
                />

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="违章罚款："
                android:id="@+id/txt_fakuan"
                android:textSize="18dp"
                android:padding="5dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:text="违章时间：2020-10-23 08:12:00.0"
            android:id="@+id/txt_time"
            android:textSize="15dp"
            android:padding="5dp"
            />




    </LinearLayout>


</LinearLayout>