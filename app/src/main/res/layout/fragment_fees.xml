<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/title"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:id="@+id/btn_shuifei"
            android:layout_weight="1"
            android:background="@drawable/hui_yuan1"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:padding="15dp"
                android:src="@drawable/jiaofei_shui" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="水费查询"
                android:textSize="20dp"
                android:gravity="center"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:id="@+id/btn_dianfei"
            android:background="@drawable/hui_yuan1"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:padding="15dp"
                android:layout_margin="5dp"
                android:src="@drawable/jiaofei_dian" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="电费查询"
                android:textSize="20dp"
                android:gravity="center"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:id="@+id/btn_huhao"
            android:layout_weight="1"
            android:background="@drawable/hui_yuan1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:padding="15dp"
                android:src="@drawable/jiaofei_huhao" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="户号查询"
                android:textSize="20dp"
                android:gravity="center"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:id="@+id/btn_zixun"
            android:background="@drawable/hui_yuan1"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:padding="15dp"
                android:layout_margin="5dp"
                android:src="@drawable/jiaofei_zixun" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="相关资讯"
                android:textSize="20dp"
                android:gravity="center"
                />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/btn_jiaofei"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/btn_bai_txt_lan_r500"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动缴费"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                />


        </LinearLayout>



        <LinearLayout
            android:id="@+id/btn_guanli"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/btn_bai_txt_lan_r500"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="户号管理"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                />


        </LinearLayout>




    </LinearLayout>


</LinearLayout>